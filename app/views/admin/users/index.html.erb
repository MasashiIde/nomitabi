<div class= "container">
  <div class= "row py-5">
    <div class= "offset-1 col">
      <h4>ユーザー一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="offset-1 col-md-10">
      <table class="table table-hover table-inveres">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
            <th></th>
          </tr>
        </thead>

        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.family_name %><%= user.first_name %>
                <% end %>
              </td>
              <td><%= user.nickname %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted == true %>
                  <p class="text-danger">退会</p>
                <% else user.is_deleted == false %>
                  <p class="text-success">有効</p>
                <% end %>
              </td>
              <td>
                <%= link_to "削除する", admin_user_path(user), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"} %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>