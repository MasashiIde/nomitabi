<div class= "container">
  <div class= "row py-5">
    <div class= "offset-1 col">
      <h4>ユーザー詳細</h4>
    </div>
  </div>

  <div class= "row">
    <div class= "offset-2 col-md-3">
      <%= image_tag @user.get_profile_image(200,200) %>
    </div>

    <div class= "col-md-7">
      <table class="table">
        <tbody height= "100">
          <tr>
            <th width= "200">氏名</th>
            <td>
              <%= @user.family_name %>
              <%= @user.first_name %>
            </td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>自己紹介文</th>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
                <% if @user.is_deleted == true %>
                  <p class="text-danger">退会</p>
                <% else @user.is_deleted == false %>
                  <p class="text-success">有効</p>
                <% end %>
              </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>