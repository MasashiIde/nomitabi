<% visitor = notification.visitor %>
<% visited = notification.visited %>

<div class= "col-md-6 mx-auto form-inline">
  <span>
    <%= link_to user_path(visitor) do %>
      <%= image_tag visitor.get_profile_image(50,50) %>
      <strong><%= visitor.nickname %></strong>
    <% end %>
    さんが
    
    <% case notification.action %>
      <% when 'follow' then %>
        あなたをフォローしました
      <% when 'favorite' then %>
        <%= link_to "あなたの投稿", post_path(notification.post) %>
        にいいねしました
      <% when 'post_comment' then %>
        <% if notification.post.user_id == visited.id %>
          <%= link_to "あなたの投稿", post_path(notification.post) %>
        <% else %>
          <%= link_to post_path(notification.post) do %>
            <%= image_tag notification.post.user.get_profile_image(50,50) %>
            <strong><%= notification.post.user.nickname %></strong>
          <% end %>
          さんの投稿
        <% end %>
        にコメントしました
        <p class= "text-muted">
          <%= PostComment.find_by(id: notification.post_comment_id)&.comment %>
        </p>
    <% end %>
  </span>
  <span>
    <%= "(#{time_ago_in_words(notification.created_at)}前)" %>
  </span>
</div>