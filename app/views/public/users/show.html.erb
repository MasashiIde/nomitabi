<div class= "container">
  <div class= "row py-5">
    <div class= "offset-1 col-md-3">
      <% if @user == current_user %>
        <h4>マイページ</h4>
      <% else %>
        <h4>ユーザープロフィール</h4>
      <% end %>
    </div>
  </div>

  <div class= "row">
    <div class= "offset-2 col-md-3">
      <%= image_tag @user.get_profile_image(200,200) %>
    </div>

    <div class= "col-md-6">
      <table class="table">
        <tbody height= "100">
          <% if @user == current_user %>
            <tr>
              <th>氏名</th>
              <td>
                <%= @user.family_name %>
                <%= @user.first_name %>
              </td>
            </tr>
          <% end %>
          <tr>
            <th width= "200">ニックネーム</th>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th>自己紹介文</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class= "row">
    <div class= "offset-6 col-md-2">
      <%= link_to "いいねした投稿", favorites_user_path(@user) %>
    </div>
    <% if @user == current_user and @user.email != 'guest@example.com' %>
      <div class= "col-md-2">
        <%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>

</div>