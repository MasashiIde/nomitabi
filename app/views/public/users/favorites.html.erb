<div class= "container">
  <div class= "row py-5">
    <div class= "offset-1 col">
      <h4>
        <%= @user.nickname %>
        のいいね一覧
      </h4>
    </div>
  </div>

  <div class= "row">
    <% @favorite_posts.each do |favorite_post| %>
      <div class= "col-3">
        <div class="card h-100" style="width: 17rem;">
          <%= image_tag favorite_post.get_shop_image(400,400) %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to post_path(favorite_post) do %>
                <%= favorite_post.shop_name %>
              <% end %>
            </h5>
            <p class="card-text"><%= favorite_post.introduction %></p>
            <p class="card-text"><%= favorite_post.shop_address %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class= "row pt-2">
    <div class= "col">
      <%= paginate @favorite_posts, theme: 'bootstrap-5' %>
    </div>
  </div>
  
</div>