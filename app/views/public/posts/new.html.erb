<div class= "container">
  <div class= "row py-5">
    <div class= "offset-1 col">
      <h4>新規投稿</h4>
    </div>
  </div>

  <%= form_with model:@post do |f| %>
    <div class= "row form-group">
      <%= f.label :shop_image, "店舗画像", :class => "offset-1 col-md-3 col-form-label" %>
      <%= f.file_field :shop_image, placeholder: "店舗画像", accept: "image/*" %>
    </div>

    <div class= "row form-group">
      <%= f.label :shop_name, "店舗名", :class => "offset-1 col-md-3 col-form-label" %>
      <%= f.text_field :shop_name, :class => "form-control col-md-4" %>
    </div>

    <div class= "row form-group">
      <%= f.label :introduction, "店舗紹介文", :class => "offset-1 col-md-3 col-form-label" %>
      <%= f.text_area :introduction, :class => "form-control col-md-4" %>
    </div>

    <div class= "row form-group">
      <%= f.label :shop_address, "店舗住所", :class => "offset-1 col-md-3 col-form-label" %>
      <%= f.text_field :shop_address, :class => "form-control col-md-6" %>
    </div>

    <div class= "row form-group">
      <%= f.label :shop_url, "店舗ホームページURL", :class => "offset-1 col-md-3 col-form-label" %>
      <%= f.text_field :shop_url, :class => "form-control col-md-6" %>
    </div>

    <div class= "actions d-grid col-md-3 mx-auto">
      <%= f.submit "投稿", :class => "btn btn-success btn-lg btn-block" %>
    </div>
  <% end %>

</div>