<div class= "container">

  <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
    <div class= "row form-group py-5">
      <div class= "offset-1 col-md-5">
        <h4>検索結果"<%= @keyword %>"</h4>
      </div>
      <%= f.text_field :keyword, value: @keyword, class: "form-control offset-1 col-md-3", placeholder: "キーワードで検索" %>
      <%= button_tag(type: "submit", class: "btn btn-primary mr-2") do %>
        <i class="fas fa-search"></i>
      <% end %>
      <%= link_to "検索クリア", posts_path %>
    </div>
  <% end %>
  
  <div class= "row">
    <% @posts.each do |post| %>
      <div class= "col-3">
        <div class="card h-100" style="width: 17rem;">
          <%= image_tag post.get_shop_image(400,400) %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to post_path(post) do %>
                <%= post.shop_name %>
              <% end %>
            </h5>
            <p class="card-text"><%= post.introduction %></p>
            <p class="card-text"><%= post.shop_address %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class= "row pt-2">
    <div class= "col">
      <%= paginate @posts, theme: 'bootstrap-5' %>
    </div>
  </div>
  
</div>