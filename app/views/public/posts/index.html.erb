<div class= "container">
  <div class= "row py-5">
    <div class= "offset-1 col">
      <h4>投稿一覧</h4>
    </div>
  </div>

  <div class= "row">
    <div class="search-form pb-4 ml-auto ">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <% @posts.each do |post| %>
    <div class= "row">
      <div class= "col-md-3">
        <%= link_to post_path(post) do %>
          <%= image_tag post.get_shop_image(250,300) %>
        <% end %>
        <h5>店舗名</h5>
        <p>
          <%= link_to post_path(post) do %>
            <%= post.shop_name %>
          <% end %>
        </p>

        <h5>店舗紹介文</h5>
        <p><%= post.introduction %></p>

        <h5>店舗住所</h5>
        <p><%= post.shop_address %></p>
      </div>
    </div>
  <% end %>
</div>